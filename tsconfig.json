{
  "compilerOptions": {    
    "target": "esnext",
    "declaration": true,
    "outDir": "./dist/types",
    "lib": ["esnext"],
    "module": "nodenext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/test/*.ts"],
	"exclude": ["node_modules"]
}
